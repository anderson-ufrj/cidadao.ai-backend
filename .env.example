# Cidad√£o.AI Backend - Environment Configuration Template
# Copy this file to .env and fill in your values

# ==============================================================================
# üîê SECURITY & AUTHENTICATION
# ==============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this
SECRET_KEY=your-general-secret-key-here-change-this
API_SECRET_KEY=your-api-secret-key-here-change-this

# Session & Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# üåê API KEYS & EXTERNAL SERVICES
# ==============================================================================

# Portal da Transpar√™ncia (Brazilian Government API)
TRANSPARENCY_API_KEY=your-transparency-api-key-here

# Dados.gov.br (Brazilian Open Data Portal)
DADOS_GOV_API_KEY=your-dados-gov-api-key-here  # Optional - only if the API requires authentication

# AI/LLM Providers
GROQ_API_KEY=your-groq-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
MARITACA_API_KEY=your-maritaca-api-key-here
MARITACA_MODEL=sabia-3.1  # Options: sabia-3.1 (latest, recommended), sabia-3 (legacy), sabiazinho-3 (fast)
LLM_PROVIDER=maritaca  # Options: maritaca, anthropic

# Vector Database (if using external ChromaDB)
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# ==============================================================================
# üìä DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL (Production)
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/cidadao_ai
POSTGRES_USER=cidadao_ai
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_DB=cidadao_ai

# Supabase (Recommended for HuggingFace Spaces deployments)
# Get from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here  # Backend (bypasses RLS)
SUPABASE_ANON_KEY=your-anon-key-here  # Frontend only

# Redis (Cache & Queue)
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# üöÄ APPLICATION CONFIGURATION
# ==============================================================================

# Environment
APP_ENV=development  # development, staging, production
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration (comma-separated list)
# IMPORTANT: Add your frontend domain here for production!
# Example for Vercel:
# ALLOWED_ORIGINS=http://localhost:3000,https://cidadao-ai-frontend.vercel.app,https://*.vercel.app
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://cidadao-ai-frontend.vercel.app,https://*.vercel.app

# ==============================================================================
# üìà MONITORING & OBSERVABILITY
# ==============================================================================

# Metrics
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
STRUCTURED_LOGGING=true

# Grafana Cloud Integration (Production Monitoring)
# Get credentials from: https://grafana.com/ ‚Üí Connections ‚Üí Prometheus
GRAFANA_CLOUD_ENABLED=false  # Set to true to enable push to Grafana Cloud
GRAFANA_CLOUD_URL=https://prometheus-prod-XX-prod-sa-east-1.grafana.net/api/prom/push
GRAFANA_CLOUD_USER=your-instance-id  # 6-digit Instance ID
GRAFANA_CLOUD_KEY=glc_your-api-key-here  # API Key starting with glc_
METRICS_PUSH_INTERVAL=60  # Seconds between metric pushes (default: 60)
METRICS_PUSH_TIMEOUT=10  # Timeout for push requests (default: 10)

# ==============================================================================
# ‚òÅÔ∏è CLOUD & DEPLOYMENT
# ==============================================================================

# HuggingFace Spaces (if deploying there)
SPACE_ID=your-hf-space-id

# Docker Configuration
COMPOSE_PROJECT_NAME=cidadao-ai

# ==============================================================================
# üîß OPTIONAL FEATURES
# ==============================================================================

# Background Tasks
ENABLE_BACKGROUND_TASKS=true
CELERY_BROKER_URL=redis://localhost:6379/1

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Storage
STORAGE_TYPE=local  # local, s3, gcs
S3_BUCKET=your-s3-bucket
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ==============================================================================
# üß™ DEVELOPMENT SETTINGS
# ==============================================================================

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_pass@localhost:5432/cidadao_ai_test

# Development Tools
HOT_RELOAD=true
AUTO_MIGRATE=true
